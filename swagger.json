{
  "openapi": "3.1.0",
  "info": {
    "title": "sevenmark-server",
    "description": "sevenmark/server",
    "contact": {
      "name": "Levi Lim",
      "email": "shiueo.csh@gmail.com"
    },
    "license": {
      "name": "Apache-2.0",
      "identifier": "Apache-2.0"
    },
    "version": "2.8.2"
  },
  "paths": {
    "/health-check": {
      "get": {
        "tags": [
          "Health"
        ],
        "operationId": "health_check",
        "responses": {
          "204": {
            "description": "Service is healthy and running"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/v0/render": {
      "post": {
        "tags": [
          "Render"
        ],
        "operationId": "render_endpoint",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RenderDocumentRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Document rendered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/RenderedDocument"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "required": [
          "status",
          "code"
        ],
        "properties": {
          "code": {
            "type": "string"
          },
          "details": {
            "type": [
              "string",
              "null"
            ]
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          }
        }
      },
      "RenderDocumentRequest": {
        "type": "object",
        "required": [
          "content",
          "document_title"
        ],
        "properties": {
          "content": {
            "type": "string",
            "description": "Raw SevenMark content to render"
          },
          "document_title": {
            "type": "string",
            "description": "Document title for generating edit links"
          }
        }
      },
      "RenderedDocument": {
        "type": "object",
        "required": [
          "html",
          "categories",
          "references",
          "sections"
        ],
        "properties": {
          "categories": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Document categories",
            "uniqueItems": true
          },
          "html": {
            "type": "string",
            "description": "Rendered HTML content"
          },
          "redirect": {
            "type": [
              "object",
              "null"
            ],
            "description": "Redirect target if this is a redirect page"
          },
          "references": {
            "type": "array",
            "items": {
              "type": "object"
            },
            "description": "Referenced documents (for backlinks)"
          },
          "sections": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/SectionInfo"
            },
            "description": "Section information with byte offsets for section editing"
          }
        }
      },
      "SectionInfo": {
        "type": "object",
        "description": "Section range information for frontend consumption",
        "required": [
          "section_index",
          "level",
          "start",
          "end"
        ],
        "properties": {
          "end": {
            "type": "integer",
            "description": "Section end byte offset (next same/higher level header or document end)",
            "minimum": 0
          },
          "level": {
            "type": "integer",
            "description": "Header level (1-6)",
            "minimum": 0
          },
          "section_index": {
            "type": "integer",
            "description": "Section index (same as Header's section_index)",
            "minimum": 0
          },
          "start": {
            "type": "integer",
            "description": "Section start byte offset (header start position)",
            "minimum": 0
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Health",
      "description": "Health endpoints"
    },
    {
      "name": "Render",
      "description": "Document rendering endpoints"
    }
  ]
}